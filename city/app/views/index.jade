extends layout
 
block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h2.text-center.login-title Sign in to begin your city trip
          div.account-wall
            img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
            form(class='form-signin', action='/login', method='POST')
              input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='Password', required)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
              span.clearfix
          br
          a(href='/login/facebook', class='btn btn-lg btn-info btn-block') Login with Facebook
          a(href='/login/twitter', class='btn btn-lg btn-info btn-block') Login with Twitter
          a(href='/signup', class='text-center new-account') Create an account
          #message
          if message
            h2.text-center.error-message #{message}